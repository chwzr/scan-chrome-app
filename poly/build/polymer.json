{
  "entrypoint": "index.html",
  "fragments": [],
  "sources": [
    "_locales/**/*",
    "assets/*",
    "background.js",
    "bower.json",
    "manifest.json",
    "index.html"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js"
  ],
  "builds": [
    {
      "name": "bundled-custom",
      "bundle": {
        "stripComments": true,
        "inlineCss": false,
        "inlineScripts": false,
        "sourcemaps": true
      },
      "js": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      }
    }
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  }
}